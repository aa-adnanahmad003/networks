<odoo>
    <template id="report_invoice_document_for_customer_credit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']/div/table/t[3]/t/t[3]/tr" position="after">
            <t t-if="o.move_type in ['out_invoice', 'out_refund']">
                <tr class="border-black fw-bold">
                    <td>Customer Dues:</td>
                    <td class="text-end">
                        <span t-field="o.customer_credit"/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>
    <template id="report_invoice_document_for_customer_credit" inherit_id="account.document_tax_totals">
        <xpath expr="//tr[@class='border-black o_total']" position="after">
            <t t-if="len(payments_vals) < 1">
                <tr class="border-black fw-bold">
                    <td>Customer Dues:</td>
                    <td class="text-end">
                        <span t-field="o.customer_credit"/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>
</odoo>
